= standard_form_for resource, url: session_path(resource_name) do |f|
  = f.email_field :email, placeholder: 'Email address', label: nil, icon: 'glyphicon-inbox', autocomplete: 'on'
  = f.password_field :password, { placeholder: 'Password', label: nil, icon: 'glyphicon-lock' }
  = f.check_box :remember_me, checked: true
  = f.submit "Login using email", class: 'btn btn-primary btn-block'
